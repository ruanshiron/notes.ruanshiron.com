= form_with(model: note) do |form|
  div
    = form.label :title, style: "display: block"
    = form.text_field :title
    - form.object.errors.full_messages_for(:title).each do |message|
      .invalid-feedback
        = message
  div
    = form.label :published_on, style: "display: block"
    = form.date_field :published_on
  div
    = form.label :body, style: "display: block"
    = form.text_area :body
    - form.object.errors.full_messages_for(:title).each do |message|
      .invalid-feedback
        = message
  div
    = form.submit
